{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2015", "dom"],
    "target": "ES2018",
    "strict": true,
    "moduleResolution": "node",
    "paths": {
      "@lib/*": ["./src/*"],
      "@schema": ["./schema/index"],
      "@schema/*": ["./schema/*"],
      "@types": ["./types/index"],
      "utils": ["./utils/index"],
      "utils/*": ["./utils/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["."],
  "exclude": ["node_modules/**", "**/dist/**"]
}
