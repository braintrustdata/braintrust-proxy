{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2015", "dom"],
    "target": "ES2018",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "bundler",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["src/*"],
      "@schema": ["schema/index"],
      "@schema/*": ["schema/*"],
      "@types": ["types/index"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["."],
  "exclude": ["node_modules/**", "**/dist/**"]
}
